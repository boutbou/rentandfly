<div class="tabs1">
  <a class="tab1 active">
    <h3>My drones</h3>
  </a>
  <a class="tab1" href="<%= myrentals_path %>">
    <h3>My rentals</h3>
  </a>
  <a class="tab1" href="<%= profile_edit_path %>">
    <h3>My account</h3>
  </a>
</div>

<!-- Bouton "ajouter un drone" -->
<%= link_to "Add a drone", new_drone_path, class: "btn btn-blue btn-center" %>

<!-- Liste des drones appartenant au logged-in user. Pas de page vu du drone pour l'instant,
la page edit suffit pour les utilisateurs connectÃ©s non ?  -->
<div class="container">
  <% Drone.all.each do |drone| %>
  <div class="row">
    <div class="col-xs-12 drone">
      <% if drone.user = current_user %>
      <% if drone.photo_drone? %>
      <div class="drone-image hidden-xs">
        <%= cl_image_tag drone.photo_drone.path, width: 200, height: 300, crop: :fill %>
      </div>
      <% end %>
      <div class= drone-body>
        <h3><%= drone.model %></h3>
        <p><%= drone.description %></p>
      </div>
      <ul class="list-inline drone-controls">
        <li><%= link_to "Edit", edit_drone_path(drone), class: "btn btn-blue" %> </li>
        <li><%= link_to "Delete", drone_path(drone), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-red" %></li>
        <% end %>
      </div>
    </div>
    <% end %>
  </ul>
</div>
