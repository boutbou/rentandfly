<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">

      <%= simple_form_for @drone do |f| %>
      <%= f.error_notification %>
      <%= f.input :brand, required: false, autofocus: true %>
      <%= f.input :model, required: false, autofocus: true %>
      <%= f.input :daily_price, required: false, autofocus: true %>
      <%= f.input :description, required: false, autofocus: true, as: :text %>
      <%= f.input :weekly_deal, required: false, autofocus: true %>
      <%= f.input :monthly_deal, required: false, autofocus: true %>
      <%= f.input :autonomy, required: false, autofocus: true %>
      <%= f.input :range, required: false, autofocus: true %>
      <%= f.input :controller, required: false, autofocus: true %>
      <%= f.input :deposit, required: false, autofocus: true %>
      <%= f.input :battery, required: false, autofocus: true %>
      <%= f.input :available, required: false, autofocus: true %>
      <%= f.input :photo_footage, as: :attachinary %>
      <%= f.input :photo_drone, as: :attachinary %>
      <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>


      <!-- Bouton de suppression d'un drone-->

      <%= link_to "delete", drone_path(@drone), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>

    </div>
  </div>
</div>
